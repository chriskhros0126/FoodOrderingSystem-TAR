@model FoodOrderingSystem.Models.InventoryItem

@{
    ViewData["Title"] = "Edit Inventory Item";
}

<h1>Edit Inventory Item</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CurrentStock" class="control-label"></label>
                <input asp-for="CurrentStock" class="form-control" />
                <span asp-validation-for="CurrentStock" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="Unit" class="form-control">
                    <option value="kg">Kilograms</option>
                    <option value="g">Grams</option>
                    <option value="L">Liters</option>
                    <option value="ml">Milliliters</option>
                    <option value="pieces">Pieces</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Threshold" class="control-label"></label>
                <input asp-for="Threshold" class="form-control" />
                <span asp-validation-for="Threshold" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CostPerUnit" class="control-label"></label>
                <input asp-for="CostPerUnit" class="form-control" />
                <span asp-validation-for="CostPerUnit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>