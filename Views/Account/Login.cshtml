@model FoodOrderingSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: url('/images/dishes/login-background.jpg') center center/cover no-repeat fixed;
        min-height: 100vh;
    }
    .login-left {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }
    .login-form {
        width: 100%;
        max-width: 400px;
        margin-left: 0;
        margin-right: auto;
        background: rgba(0,0,0,0.7);
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(0,0,0,0.37);
        padding: 2.5rem 2rem;
    }
    .text-white, .login-form label, .login-form h3, .login-form a, .login-form .form-check-label {
        color: #fff !important;
    }
    .form-control {
        background: rgba(255,255,255,0.1);
        border: 1px solid #fff;
        color: #fff;
    }
    .form-control:focus {
        background: rgba(255,255,255,0.2);
        color: #fff;
        border-color: #fff;
        box-shadow: none;
    }
    .btn-black {
        background-color: black;
        color: white;
        border: none;
    }
    .btn-black:hover {
        background-color: #333;
        color: white;
    }
    .form-footer-text {
        color: #fff;
    }
</style>

<div class="container-fluid">
    <div class="row" style="min-height: 100vh;">
        <div class="col-md-6 login-left">
            <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
                <h3 class="mb-4 text-white">Login</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-white"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-white"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-white">Remember me?</label>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-black">Login</button>
                </div>
                <div class="mt-3 form-footer-text">
                    <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="text-white text-decoration-underline">Sign up</a></p>
                </div>
            </form>
        </div>
        <div class="col-md-6 d-none d-md-block"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
