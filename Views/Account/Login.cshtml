@model FoodOrderingSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: url('/images/dishes/login-background.jpg') center center/cover no-repeat fixed;
        min-height: 100vh;
    }
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
    .login-form {
        width: 100%;
        max-width: 450px;
        background: rgba(0,0,0,0.7);
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(0,0,0,0.37);
        padding: 2.5rem 2rem;
    }
    .text-white, .login-form label, .login-form h3, .login-form a, .login-form .form-check-label {
        color: #fff !important;
    }
    .form-control {
        background: rgba(255,255,255,0.1);
        border: 1px solid #fff;
        color: #fff;
        padding: 0.7rem 1rem;
        font-size: 1.05rem;
    }
    .form-control:focus {
        background: rgba(255,255,255,0.2);
        color: #fff;
        border-color: #fff;
        box-shadow: none;
    }
    .btn-black {
        background-color: black;
        color: white;
        border: none;
        padding: 0.7rem;
        font-size: 1.1rem;
    }
    .btn-black:hover {
        background-color: #333;
        color: white;
    }
    .form-footer-text {
        color: #fff;
        text-align: center;
    }
    .login-heading {
        text-align: center;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container-fluid p-0">
    <div class="login-container">
        <div class="login-form">
            <h3 class="login-heading text-white">Login to Your Account</h3>
            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-white"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-white"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-white">Remember me?</label>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-black">Login</button>
                </div>
                <div class="form-footer-text">
                    <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="text-white text-decoration-underline">Sign up</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
