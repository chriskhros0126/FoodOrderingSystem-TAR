@model FoodOrderingSystem.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background: url('/images/dishes/login-background.jpg') center center/cover no-repeat fixed;
        min-height: 100vh;
    }
    .register-left {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }
    .register-form {
        width: 100%;
        max-width: 700px;
        margin-left: 0;
        margin-right: auto;
        background: rgba(0,0,0,0.7);
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(0,0,0,0.37);
        padding: 3.5rem 3rem;
        font-size: 1.15rem;
    }
    .text-white, .register-form label, .register-form h3, .register-form a, .register-form .form-check-label {
        color: #fff !important;
    }
    .form-control {
        background: rgba(255,255,255,0.1);
        border: 1px solid #fff;
        color: #fff;
    }
    .form-control:focus {
        background: rgba(255,255,255,0.2);
        color: #fff;
        border-color: #fff;
        box-shadow: none;
    }
    .btn-black {
        background-color: black;
        color: white;
        border: none;
    }
    .btn-black:hover {
        background-color: #333;
        color: white;
    }
    .form-footer-text {
        color: #fff;
    }
</style>

<div class="container-fluid">
    <div class="row" style="min-height: 100vh;">
        <div class="col-md-6 register-left">
            <form asp-action="Register" asp-controller="Account" method="post" class="register-form">
                <h3 class="mb-4 text-white">Create Account</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label text-white"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label text-white"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label text-white"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label text-white"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label text-white"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label text-white"></label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-black">Register</button>
                </div>
                <div class="mt-3 form-footer-text">
                    <p>Already have an account? <a asp-action="Login" asp-controller="Account" class="text-white text-decoration-underline">Login</a></p>
                </div>
            </form>
        </div>
        <div class="col-md-6 d-none d-md-block"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
