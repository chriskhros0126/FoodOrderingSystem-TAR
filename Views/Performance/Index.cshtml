@model IEnumerable<FoodOrderingSystem.Models.Rider>

@{
    ViewData["Title"] = "Rider Performance";
}

<div class="container-fluid">
    <h2 class="mb-4">Rider Performance Overview</h2>

    <div class="row">
        @foreach (var rider in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@rider.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@rider.PhoneNumber</h6>
                        
                        <div class="mt-3">
                            <p class="mb-1">
                                <i class="fas fa-motorcycle text-primary"></i>
                                Total Deliveries: @rider.Orders.Count
                            </p>
                            <p class="mb-1">
                                <i class="fas fa-check-circle text-success"></i>
                                Completed Deliveries: @rider.Orders.Count(o => o.Status == OrderStatus.Delivered)
                            </p>
                            <p class="mb-1">
                                <i class="fas fa-clock text-warning"></i>
                                Pending Deliveries: @rider.Orders.Count(o => o.Status == OrderStatus.OutForDelivery)
                            </p>
                        </div>

                        <div class="mt-3">
                            <a asp-action="Details" asp-route-id="@rider.Id" class="btn btn-primary">
                                <i class="fas fa-chart-line"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 