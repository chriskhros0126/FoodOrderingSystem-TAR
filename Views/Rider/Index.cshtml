@model IEnumerable<FoodOrderingSystem.Models.Rider>

@{
    ViewData["Title"] = "Rider Management";
}

<div class="container">
    <h1>Rider Management</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Rider</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Vehicle Type</th>
                    <th>Status</th>
                    <th>Rating</th>
                    <th>Total Deliveries</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.VehicleType</td>
                        <td>
                            <span class="badge @(item.IsAvailable ? "bg-success" : "bg-danger")">
                                @(item.IsAvailable ? "Available" : "Busy")
                            </span>
                        </td>
                        <td>@item.Rating.ToString("F1")</td>
                        <td>@item.TotalDeliveries</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Performance" asp-route-id="@item.Id" class="btn btn-success btn-sm">Performance</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 