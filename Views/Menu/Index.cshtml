@* FOR ADMIN ONLY *@

@model IEnumerable<FoodOrderingSystem.Models.Dish>

<h2>Menu</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Dish</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price (RM)</th>
            <th>Category</th>
            <th>Available</th>
            <th>Special</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var dish in Model)
    {
        <tr>
            <td>@dish.Name</td>
            <td>@dish.Price.ToString("0.00")</td>
            <td>@dish.Category</td>
            <td>@(dish.IsAvailable ? "Yes" : "No")</td>
            <td>@(dish.IsSpecialToday ? "Yes" : "No")</td>
            <td>
                <a asp-action="Details" asp-route-id="@dish.Id" class="btn btn-info btn-sm">View</a>
                <a asp-action="Edit" asp-route-id="@dish.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@dish.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
