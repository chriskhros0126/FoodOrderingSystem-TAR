@model List<CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Your Shopping Cart</h2>
            <hr />
            
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <h4>Your cart is empty</h4>
                    <p>Add some delicious dishes to your cart!</p>
                    <a href="/Dish" class="btn btn-primary">Browse Menu</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.Dish.ImageUrl))
                                            {
                                                <img src="@item.Dish.ImageUrl" alt="@item.Dish.Name" class="img-thumbnail me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                            }
                                            <div>
                                                <h5>@item.Dish.Name</h5>
                                                <small>@item.Dish.Description</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Dish.Price.ToString("C")</td>
                                    <td>
                                        <div class="input-group" style="max-width: 120px;">
                                            <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(@item.Dish.Id, -1)">-</button>
                                            <input type="number" class="form-control text-center" value="@item.Quantity" min="1" id="qty-@item.Dish.Id" readonly />
                                            <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(@item.Dish.Id, 1)">+</button>
                                        </div>
                                    </td>
                                    <td>@((item.Dish.Price * item.Quantity).ToString("C"))</td>
                                    <td>
                                        <button class="btn btn-sm btn-danger" onclick="removeFromCart(@item.Dish.Id)">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td colspan="2"><strong>@Model.Sum(i => i.Dish.Price * i.Quantity).ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Dish" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Continue Shopping
                    </a>
                    <a href="/Order/Checkout" class="btn btn-success">
                        <i class="fas fa-shopping-cart"></i> Proceed to Checkout
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateQuantity(dishId, change) {
            const qtyElement = document.getElementById(`qty-${dishId}`);
            let newQty = parseInt(qtyElement.value) + change;
            if (newQty < 1) newQty = 1;
            
            fetch('/Order/UpdateCartItem', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ dishId: dishId, quantity: newQty })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                }
            });
        }
        
        function removeFromCart(dishId) {
            if (confirm('Are you sure you want to remove this item from your cart?')) {
                fetch('/Order/RemoveFromCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ dishId: dishId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                });
            }
        }
    </script>
}
