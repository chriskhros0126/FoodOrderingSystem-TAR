@model FoodOrderingSystem.Models.Payment
@{
    ViewData["Title"] = "Payment Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Payment #@Model.PaymentId</h3>
                </div>
                <div class="card-body">
                    <h5>Payment Information</h5>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>Payment ID:</strong> @Model.PaymentId</p>
                            <p><strong>Order ID:</strong> #@Model.OrderId</p>
                            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
                            <p><strong>Payment Date:</strong> @Model.PaymentDate.ToString("g")</p>
                            <p>
                                <strong>Status:</strong>
                                <span class="badge @(Model.PaymentStatus == "Completed" ? "bg-success" : Model.PaymentStatus == "Pending" ? "bg-warning" : "bg-danger")">
                                    @Model.PaymentStatus
                                </span>
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CouponCode))
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-tag me-2"></i> Coupon used: <strong>@Model.CouponCode</strong>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Details", "Order", new { id = Model.OrderId })" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Order
                        </a>
                        <a href="@Url.Action("Generate", "Invoice", new { orderId = Model.OrderId })" class="btn btn-info">
                            <i class="fas fa-file-invoice"></i> Generate Invoice
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
