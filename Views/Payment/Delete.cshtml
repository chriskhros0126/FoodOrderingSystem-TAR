@model FoodOrderingSystem.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container">
    <h2>Delete Payment</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this payment?</h4>
    </div>
    
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Payment ID</dt>
                <dd class="col-sm-9">@Model.PaymentId</dd>
                
                <dt class="col-sm-3">Order ID</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>
                
                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>
                
                <dt class="col-sm-3">Method</dt>
                <dd class="col-sm-9">@Model.PaymentMethod</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.PaymentStatus</dd>
                
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.PaymentDate.ToString("g")</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PaymentId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
