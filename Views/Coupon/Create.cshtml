@model FoodOrderingSystem.Models.Coupon

@{
    ViewData["Title"] = "Create Coupon";
}

<h2>Create Coupon</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DiscountValue"></label>
        <input asp-for="DiscountValue" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ValidFrom"></label>
        <input asp-for="ValidFrom" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="ValidUntil"></label>
        <input asp-for="ValidUntil" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive" class="form-check-input" />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
