@{
    ViewData["Title"] = "Thank You for Your Feedback";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Thank You for Your Feedback</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 72px;"></i>
                    <h4 class="mt-4">Your feedback has been submitted successfully!</h4>
                    <p class="mt-3">We appreciate you taking the time to share your experience with us. Your feedback helps us improve our service.</p>
                    
                    <div class="mt-4">
                        @if (ViewBag.OrderId != null)
                        {
                            <a href="@Url.Action("Details", "Order", new { id = ViewBag.OrderId })" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Back to Order
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                                <i class="fas fa-home"></i> Return to Home
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
