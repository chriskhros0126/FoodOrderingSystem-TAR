@model IEnumerable<FoodOrderingSystem.Models.Feedback>

@{
    ViewData["Title"] = "Feedback List";
}

<div class="container">
    <h2>Feedback List</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No feedback has been submitted yet.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var feedback in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Order #@feedback.OrderId</h5>
                                <small class="text-muted">@feedback.DateSubmitted.ToString("MMM dd, yyyy hh:mm tt")</small>
                            </div>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= feedback.Rating)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(feedback.Comment))
                            {
                                <h6>Comments:</h6>
                                <p>@feedback.Comment</p>
                            }
                            
                            @if (!string.IsNullOrEmpty(feedback.Message))
                            {
                                <h6>Additional Feedback:</h6>
                                <p>@feedback.Message</p>
                            }
                            
                            <div class="mt-3">
                                <a href="@Url.Action("Details", "Order", new { id = feedback.OrderId })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> View Order
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
