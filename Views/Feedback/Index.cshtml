@model IEnumerable<FoodOrderingSystem.Models.Feedback>

@{
    ViewData["Title"] = "Feedback";
    Layout = "_AdminLayout";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h1>Customer Feedback</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">Add New Feedback</a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Rating</th>
                            <th>Comment</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FeedbackID</td>
                                <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @for (int i = 0; i < item.Rating; i++)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    @for (int i = item.Rating; i < 5; i++)
                                    {
                                        <i class="bi bi-star text-muted"></i>
                                    }
                                </td>
                                <td>@item.Comment</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.FeedbackID" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.FeedbackID" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FeedbackID" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 