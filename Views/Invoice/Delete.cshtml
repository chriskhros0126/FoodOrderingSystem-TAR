@model FoodOrderingSystem.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<div class="container">
    <h2>Delete Invoice</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this invoice?</h4>
    </div>
    
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Invoice ID</dt>
                <dd class="col-sm-9">@Model.InvoiceId</dd>
                
                <dt class="col-sm-3">Order ID</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>
                
                <dt class="col-sm-3">Generated Date</dt>
                <dd class="col-sm-9">@Model.GeneratedDate.ToString("g")</dd>
                
                <dt class="col-sm-3">PDF Path</dt>
                <dd class="col-sm-9">@Model.PdfPath</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InvoiceId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
