@model IEnumerable<FoodOrderingSystem.Models.Invoice>
@{
    ViewData["Title"] = "Invoices";
}

<div class="container">
    <h2>Invoices</h2>
    <hr />
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No invoices have been generated yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Invoice #</th>
                        <th>Order #</th>
                        <th>Generated Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        <tr>
                            <td>@invoice.InvoiceId</td>
                            <td>@invoice.OrderId</td>
                            <td>@invoice.GeneratedDate.ToString("g")</td>
                            <td>
                                <a href="@Url.Action("Details", "Invoice", new { id = invoice.InvoiceId })" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="@Url.Action("Download", "Invoice", new { id = invoice.InvoiceId })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-download"></i> Download
                                </a>
                                <a href="@Url.Action("Details", "Order", new { id = invoice.OrderId })" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-shopping-cart"></i> View Order
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
